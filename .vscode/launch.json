    "version": "0.2.0",
    "configurations": [
        {
            "type": "julia",
            "request": "launch",
            "name": "Launch Julia tests",
            "cwd": "${workspaceFolder}",
            "juliaEnv": "${command:activeJuliaEnvironment}",
            "program": "${workspaceFolder}/test/runtests.jl",
            "stopOnEntry": true
        },
        {
            "type": "julia",
            "request": "launch",
            "name": "Run script.jl",
            "juliaEnv": "${command:activeJuliaEnvironment}",
            "program": "${workspaceFolder}/script.jl",
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}"
        }
    ]
}